{
    "manifest_version": 2,
    "name": "Codesmith Calendar",
    "description": "Event reminder for all Codesmith members.",
    "version": "0.1",

    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "calendar_reminder.html"
    },

    "permissions": [
        // "tabs", "<all_urls>"
        "debugger",
        "storage",
        "alarms"
    ],

    "background": {
        "scripts": ["vendor/moment.min.js", "vendor/jquery-3.1.1.min.js", "background.js", "calendar_reminder.js"]
        // "persistent": true
    }
}
