{
    "manifest_version": 2,
    "name": "Codesmith Calendar",
    "description": "Event reminder for all Codesmith members.",
    "version": "0.1",

    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    },

    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "contextMenus",
        "activeTab",
        "storage",
        "alarms"
    ],

    "content_scripts": [
        {
            "matches": ["https://*/*", "http://*/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],

    "background": {
        "scripts": ["vendor/moment.min.js", "vendor/jquery-3.1.1.min.js", "background.js"],
        "persistent": false
    },

    /*"content_scripts": [{
        "js": [
            "vendor/jquery-3.1.1.min.js",
            "popup.js"
        ],
        "matches": [
            "http://*/*", "https://*/*"
        ]
    }]*/
}
