{
    "manifest_version": 2,
    "name": "Codesmith Calendar",
    "description": "Event reminder for all Codesmith members.",
    "version": "0.1",

    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    },

    "permissions": [
        "tabs", "<all_urls>"
    ],

    "background": {
        "scripts": ["background.js"]
        // "persistent": false
    }
}